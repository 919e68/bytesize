#!/usr/bin/env bash
set -e

ENV=$1

if [ -z "$ENV" ]; then
  echo "usage: $0 <env>"
  exit 1
fi

# clean up Rails pid file
rm -f ./tmp/pids/server.pid

if [ "$ENV" = "dev" ]; then
  echo "üöÄ starting development environment..."

  docker compose -f compose.dev.yml build
  docker compose -f compose.dev.yml down >/dev/null 2>&1 || true
  docker compose -f compose.dev.yml run --rm app bundle exec rails db:migrate
  docker compose -f compose.dev.yml up -d
elif [ "$ENV" = "prod" ]; then
  echo "üöÄ starting production environment..."

  docker compose -f compose.yml build
  docker compose -f compose.yml down >/dev/null 2>&1 || true
  docker compose -f compose.yml run --rm app bundle exec rails db:migrate
  docker compose -f compose.yml up -d
else
  echo "‚ùå unknown environment: $ENV"
  echo "usage: $0 {dev|prod}"
  exit 1
fi